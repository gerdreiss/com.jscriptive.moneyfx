<?xml version="1.0" encoding="UTF-8"?>

<?import com.jscriptive.moneyfx.ui.chart.ChartFrame?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<ChartFrame xmlns:fx="http://javafx.com/fxml/1" id="chartFrame"
            fx:controller="com.jscriptive.moneyfx.ui.chart.ChartFrame">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <HBox spacing="4">
            <padding>
                <Insets bottom="10.0" />
            </padding>
            <ToggleButton text="Day by day" />
        </HBox>
    </top>
    <center>
        <LineChart fx:id="lineChart" title="Balance development day by day">
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
            <xAxis>
                <NumberAxis side="BOTTOM"/>
            </xAxis>
        </LineChart>
    </center>
</ChartFrame>
               