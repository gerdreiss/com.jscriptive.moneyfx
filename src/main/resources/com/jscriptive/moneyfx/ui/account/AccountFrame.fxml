<?xml version="1.0" encoding="UTF-8"?>

<?import com.jscriptive.moneyfx.ui.common.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="accountFrame"
            fx:controller="com.jscriptive.moneyfx.ui.account.AccountFrame">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <HBox spacing="4">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <Button text="Add account" onAction="#addAccountFired"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="dataTable" onMouseClicked="#mouseClicked">
            <contextMenu>
                <ContextMenu fx:id="contextMenu">
                    <items>
                        <MenuItem fx:id="contextMenuItemEdit" text="Edit" onAction="#contextMenuItemEditSelected">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true">
                                    <Image url="@../images/edit.png"/>
                                </ImageView>
                            </graphic>
                        </MenuItem>
                        <MenuItem fx:id="contextMenuItemCopy" text="Copy" onAction="#contextMenuItemCopySelected">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true">
                                    <Image url="@../images/copy.png"/>
                                </ImageView>
                            </graphic>
                        </MenuItem>
                        <MenuItem fx:id="contextMenuItemDelete" text="Delete" onAction="#contextMenuItemDeleteSelected">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true">
                                    <Image url="@../images/delete.png"/>
                                </ImageView>
                            </graphic>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columns>
                <PTableColumn fx:id="bankColumn" text="Bank" percentageWidth="0.13">
                    <cellValueFactory>
                        <PropertyValueFactory property="bank"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="numberColumn" text="Number" percentageWidth="0.2">
                    <cellValueFactory>
                        <PropertyValueFactory property="number"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="nameColumn" text="Name" percentageWidth="0.30">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="typeColumn" text="Type" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="type"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="balanceDateColumn" text="Balance date" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="balanceDate"/>
                    </cellValueFactory>
                    <cellFactory>
                        <FormattedTableCellFactory alignment="right"/>
                    </cellFactory>
                </PTableColumn>
                <PTableColumn fx:id="formattedBalanceColumn" text="Balance" percentageWidth="0.12">
                    <cellValueFactory>
                        <PropertyValueFactory property="formattedBalance"/>
                    </cellValueFactory>
                    <cellFactory>
                        <FormattedTableCellFactory alignment="right"/>
                    </cellFactory>
                </PTableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>
