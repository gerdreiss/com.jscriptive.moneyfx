<?xml version="1.0" encoding="UTF-8"?>

<?import com.jscriptive.moneyfx.ui.account.dialog.AccountDialog?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AccountDialog xmlns:fx="http://javafx.com/fxml/1" id="editAccountDialog" hgap="10.0" vgap="10.0"
               xmlns="http://javafx.com/javafx/8"
               fx:controller="com.jscriptive.moneyfx.ui.account.dialog.AccountDialog">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label text="Bank" AccountDialog.columnIndex="0" AccountDialog.rowIndex="0"/>
        <Label text="Number" AccountDialog.columnIndex="0" AccountDialog.rowIndex="1"/>
        <Label text="Name" AccountDialog.columnIndex="0" AccountDialog.rowIndex="2"/>
        <Label text="Type" AccountDialog.columnIndex="0" AccountDialog.rowIndex="3"/>
        <Label text="Balance date" AccountDialog.columnIndex="0" AccountDialog.rowIndex="4"/>
        <Label text="Balance" AccountDialog.columnIndex="0" AccountDialog.rowIndex="5"/>

        <TextField fx:id="bankField" onKeyReleased="#valueChanged" promptText="Bank" AccountDialog.columnIndex="1"
                   AccountDialog.rowIndex="0"/>
        <TextField fx:id="numberField" onKeyReleased="#valueChanged" promptText="Number" AccountDialog.columnIndex="1"
                   AccountDialog.rowIndex="1"/>
        <TextField fx:id="nameField" onKeyReleased="#valueChanged" promptText="Name" AccountDialog.columnIndex="1"
                   AccountDialog.rowIndex="2"/>
        <TextField fx:id="typeField" onKeyReleased="#valueChanged" promptText="Type" AccountDialog.columnIndex="1"
                   AccountDialog.rowIndex="3"/>
        <DatePicker fx:id="balanceDateField" onKeyReleased="#valueChanged" promptText="Balance date" editable="false"
                    showWeekNumbers="true" AccountDialog.columnIndex="1" AccountDialog.rowIndex="4"/>
        <TextField fx:id="balanceField" onKeyReleased="#valueChanged" promptText="0000.00" AccountDialog.columnIndex="1"
                   AccountDialog.rowIndex="5"/>

        <HBox alignment="bottom_right" spacing="10" AccountDialog.columnIndex="1" AccountDialog.rowIndex="6">
            <children>
                <Button fx:id="addButton" disable="true" onAction="#addFired" text="Add"/>
                <Button onAction="#cancelFired" text="Cancel"/>
            </children>
        </HBox>
    </children>
</AccountDialog>
