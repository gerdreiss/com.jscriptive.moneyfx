<?xml version="1.0" encoding="UTF-8"?>

<?import com.jscriptive.moneyfx.ui.common.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="transactionFrame"
            fx:controller="com.jscriptive.moneyfx.ui.transaction.TransactionFrame">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <HBox spacing="4">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
            <Button fx:id="importButton" text="Import transactions" onAction="#importTransactionsFired"/>
            <Button fx:id="filterButton" text="Filter transactions" onAction="#filterTransactionsFired"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="dataTable">
            <columns>
                <PTableColumn fx:id="accountColumn" text="Account" percentageWidth="0.15">
                    <cellValueFactory>
                        <PropertyValueFactory property="account"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="categoryColumn" text="Category" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="category"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="conceptColumn" text="Concept" percentageWidth="0.4">
                    <cellValueFactory>
                        <PropertyValueFactory property="concept"/>
                    </cellValueFactory>
                </PTableColumn>
                <PTableColumn fx:id="dtOpColumn" text="Operation date" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="dtOp"/>
                    </cellValueFactory>
                    <cellFactory>
                        <FormattedTableCellFactory alignment="right"/>
                    </cellFactory>
                </PTableColumn>
                <PTableColumn fx:id="dtValColumn" text="Value date" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="dtVal"/>
                    </cellValueFactory>
                    <cellFactory>
                        <FormattedTableCellFactory alignment="right"/>
                    </cellFactory>
                </PTableColumn>
                <PTableColumn fx:id="amountColumn" text="Amount" percentageWidth="0.1">
                    <cellValueFactory>
                        <PropertyValueFactory property="amount"/>
                    </cellValueFactory>
                    <cellFactory>
                        <FormattedTableCellFactory alignment="right"/>
                    </cellFactory>
                </PTableColumn>
            </columns>
        </TableView>
    </center>
</BorderPane>
