<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" id="transactionDialog" hgap="10.0" vgap="10.0"
          xmlns="http://javafx.com/javafx/8"
          fx:controller="com.jscriptive.moneyfx.ui.transaction.dialog.TransactionFilterDialogController">

    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <children>

        <ComboBox fx:id="accountCombo" promptText="All accounts" GridPane.columnIndex="1" GridPane.rowIndex="0"
                  prefWidth="232"/>
        <ComboBox fx:id="categoryCombo" promptText="All categories" GridPane.columnIndex="2" GridPane.rowIndex="0"
                  prefWidth="232"/>

        <Label text="Concept" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="conceptField" promptText="Concept" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   GridPane.columnSpan="2"/>

        <Label text="Operation date" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dtOpFieldFrom" promptText="From" editable="false" showWeekNumbers="true"
                    GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="232"/>
        <DatePicker fx:id="dtOpFieldTo" promptText="Until" editable="false" showWeekNumbers="true"
                    GridPane.columnIndex="2" GridPane.rowIndex="2" prefWidth="232"/>

        <Label text="Value date" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dtValFieldFrom" promptText="From" editable="false" showWeekNumbers="true"
                    GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="232"/>
        <DatePicker fx:id="dtValFieldTo" promptText="Until" editable="false" showWeekNumbers="true"
                    GridPane.columnIndex="2" GridPane.rowIndex="3" prefWidth="232"/>

        <Label text="Amount" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="amountFieldFrom" promptText="00000.00" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   prefWidth="232"/>
        <TextField fx:id="amountFieldTo" promptText="00000.00" GridPane.columnIndex="2" GridPane.rowIndex="4"
                   prefWidth="232"/>

    </children>
</GridPane>
