<?xml version="1.0" encoding="UTF-8"?>

<?import com.jscriptive.moneyfx.ui.category.CategoryFrame?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<CategoryFrame xmlns:fx="http://javafx.com/fxml/1" id="categoryFrame"
               fx:controller="com.jscriptive.moneyfx.ui.category.CategoryFrame">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <top>
        <HBox spacing="4">
            <padding>
                <Insets bottom="10.0" />
            </padding>
            <Button text="Add category" onAction="#addCategoryFired"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="categoryTable">
            <columns>
                <TableColumn text="Name">
                </TableColumn>
                <TableColumn text="Amount">
                </TableColumn>
            </columns>
        </TableView>
    </center>
</CategoryFrame>
